<?xml version="1.0"?>
<Container version="2">
  <Name>Pelagica</Name>
  <Repository>kartoffelchipss/pelagica:latest</Repository>
  <Registry>https://hub.docker.com/r/kartoffelchipss/pelagica</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/KartoffelChipss/pelagica/issues</Support>
  <Project>https://github.com/KartoffelChipss/pelagica</Project>
  <Overview>
    Pelagica is an alternative web frontend for Jellyfin built using React. It aims to provide a fast, modern, and customizable user experience for browsing and watching your media library.
  </Overview>

  <WebUI>http://[IP]:[PORT:80]</WebUI>

  <TemplateURL>
    https://raw.githubusercontent.com/KartoffelChipss/unraid-templates/main/pelagica.xml
  </TemplateURL>

  <Config Name="Web Port"
        Target="80"
        Default="8080"
        Mode="tcp"
        Description="Web UI port"
        Type="Port" />

  <Config Name="Config JSON"
        Target="/usr/share/nginx/html/config.json"
        Default="/mnt/user/appdata/pelagica/config.json"
        Mode="rw"
        Description="Pelagica config.json file"
        Type="Path" />

<Config Name="Config Schema JSON"
        Target="/usr/share/nginx/html/config.schema.json"
        Default="/mnt/user/appdata/pelagica/config.schema.json"
        Mode="rw"
        Description="Pelagica config.schema.json file"
        Type="Path" />
</Container>